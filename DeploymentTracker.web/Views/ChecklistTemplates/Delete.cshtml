@model DeploymentTracker.web.Models.ChecklistTemplateEntity

@{
    ViewData["Title"] = "Delete";
}

<p class="display-4">Delete</p>
<p class="lead">Are you sure you want to delete enviroment @Model.Name?</p>
<hr />


<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Active
        </dt>
        <dd>
            @if (Model.IsActive)
            {
                <i class="fas fa-check-circle tableRowIcon text-success"></i>
            }
            else
            {
                <i class="far fa-check-circle tableRowIcon text-secondary"></i>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastModifiedOn)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastModifiedOn)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastModifiedBy)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastModifiedBy)
        </dd>
    </dl>
    
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
    </form>
</div>
