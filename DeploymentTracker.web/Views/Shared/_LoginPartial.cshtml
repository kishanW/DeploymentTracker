@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Deployment Tracker</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        @if (SignInManager.IsSignedIn(User))
        {
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Tasks" asp-action="Index" title="Manage" class="nav-link">Tasks</a>
                    </li>

                    <li class="nav-item">
                        <a asp-area="" asp-controller="Environments" asp-action="Index" title="Manage" class="nav-link">Environments</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Account
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="dropdown-item">Manage Account</a>
                            <button type="submit" class="dropdown-item">
                                Sign Out
                            </button>
                        </div>
                    </li>
                </ul>
            </form>
        }
        else
        {
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown link
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a asp-area="" asp-controller="Account" asp-action="Register" class="dropdown-item">Register</a>
                        <a asp-area="" asp-controller="Account" asp-action="Login" class="dropdown-item">Log in</a>
                    </div>
                </li>
            </ul>
        }
            
    </div>
</nav>