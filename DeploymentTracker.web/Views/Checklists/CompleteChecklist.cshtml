@model ChecklistEntity

<div class="row">
    <div class="col-lg-12">
        <p class="display-4">Complete Checklist - @Model.Environment.Name - @Model.Name</p>
        <hr />
    </div>
</div>


<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form asp-action="CompleteChecklistConfirm">
            <input type="hidden" asp-for="Id" />

            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Complete Checklist</h5>

                    <p class="card-text">
                        You are about to complete the checklist @Model.Environment.Name - @Model.Name.
                        @if (Model.Tasks.Any(x => !x.IsComplete))
                        {
                            <b class="text-danger">There are @Model.Tasks.Count(x => !x.IsComplete) in this checklist.</b>
                        }
                    </p>
                    <hr/>
                    <p class="h6">
                        Do you want to continue?
                    </p>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Go Back</a>

                    <button type="submit" class="btn btn-outline-warning">Continue and Complete</button>

                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>