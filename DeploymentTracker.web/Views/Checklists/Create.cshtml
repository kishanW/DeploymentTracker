@using DeploymentTracker.web.ViewModels
@model CreateChecklistViewModel

@{
    ViewData["Title"] = "Create";
}


<p class="display-4">Create new Checklist</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="SeletedTemplate" class="control-label"></label>
                @Html.DropDownListFor(x => x.SeletedTemplate, Model.Templates, new
                                                                                      {
                                                                                          @class = "form-control"
                                                                                      })
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> Active
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ScheduleFor" class="control-label"></label>
                <input asp-for="ScheduleFor" class="form-control" />
                <span asp-validation-for="ScheduleFor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GitHash" class="control-label"></label>
                <input asp-for="GitHash" class="form-control" />
                <span asp-validation-for="GitHash" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <textarea asp-for="Comments" class="form-control"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
